generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  id              Int      @id @default(autoincrement())
  name            String
  branch          String
  year            Int
  gender          String
  disciplineScore Int?
  preferences     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  allocations Allocation[]
  complaints  Complaint[]
}

model Hostel {
  id            Int      @id @default(autoincrement())
  name          String
  genderAllowed String
  capacity      Int
  distance      Int
  createdAt     DateTime @default(now())

  rooms      Room[]
  complaints Complaint[]
}

model Room {
  id               Int      @id @default(autoincrement())
  hostelId         Int
  roomNumber       String
  capacity         Int
  currentOccupancy Int      @default(0)
  createdAt        DateTime @default(now())

  hostel      Hostel       @relation(fields: [hostelId], references: [id])
  allocations Allocation[]
  complaints  Complaint[]

  @@unique([hostelId, roomNumber])
}

model Allocation {
  id          Int      @id @default(autoincrement())
  allocatedAt DateTime @default(now())
  studentId   Int
  roomId      Int
  active      Boolean  @default(true)

  student Student @relation(fields: [studentId], references: [id])
  room    Room    @relation(fields: [roomId], references: [id])

  @@index([roomId])
  @@index([studentId])
}

model Complaint {
  id          Int      @id @default(autoincrement())
  issueType   String
  description String?
  severity    Severity
  status      Status   @default(PENDING)
  createdAt   DateTime @default(now())

  studentId Int
  hostelId  Int
  roomId    Int?

  student Student @relation(fields: [studentId], references: [id])
  hostel  Hostel  @relation(fields: [hostelId], references: [id])
  room    Room?   @relation(fields: [roomId], references: [id])
}

model Admin {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      AdminRole @default(WARDEN)
  createdAt DateTime  @default(now())
}

enum Severity {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  PENDING
  IN_PROGRESS
  RESOLVED
  ESCALATED
  CLOSED
}

enum AdminRole {
  SUPERADMIN
  WARDEN
  MAINTENANCE
  AGENT
}
